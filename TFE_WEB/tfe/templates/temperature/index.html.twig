{% extends 'base.html.twig' %}

{% block title %}TFE | Temperature{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ path('hub') }}">
        <img src="{{ asset('/build/img/logo.gif') }}" width="30" height="30" alt="">
        Home   
    </a>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="navbar-brand" href="{{ path('temperature') }}">
                Temperature
            </a>
        </li>
    </ul>
    <a class="navbar-brand" href="{{ path('app_logout') }}">
        Logout
    </a>
</nav>

<div class="example-wrapper text-center">
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Celsius</th>
            <th scope="col">Date</th>
        </tr>
        </thead>
        <tbody>
        {% for temp in temps %}
            <tr>
                <td>{{ temp.celsius }}</td>
                <td>{{ temp.createdAt }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
