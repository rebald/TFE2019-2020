{% extends 'base.html.twig' %}

{% block title %}TFE | Temperature
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<nav class="navbar navbar-dark bg-dark">
		<a class="navbar-brand" href="{{ path('hub') }}">
			<img src="{{ asset('/build/img/logo.gif') }}" width="30" height="30" alt="">
			Home
		</a>
		<ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<a class="navbar-brand" href="{{ path('temperature', {sort: 'all'}) }}">
					Temperature
				</a>
			</li>
		</ul>
		<a class="navbar-brand" href="{{ path('app_logout') }}">
			Logout
		</a>
	</nav>

	<main role="main">
        <div class="example-wrapper" id="reload">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                <h1 class="h2">Chart</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span data-feather="calendar"></span>
                            Période
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" onclick="fill('week')">Cette semaine</a>
                            <a class="dropdown-item" onclick="fill('month')">Ce mois</a>
                            <a class="dropdown-item" onclick="fill('year')">Cette année</a>
                            <a class="dropdown-item" onclick="fill('all')">Tout</a>
                        </div>
                    </div>
                </div>
            </div>

            <canvas class="my-4" id="myChart" width="900" height="380"></canvas>
            <div id="helper"></div>

            <h2>Tableau</h2>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Celsius</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for temp in tempString %}
                            <tr>
                                <td>{{ temp.celsius }} °C</td>
                                <td>{{ temp.createdAt }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
	</main>

    <!-- Icons -->
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script>
      feather.replace()
    </script>

    <!-- Graphs -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
    <script>

        fill('all');

        function fill(select) {
            var arrayDate = [];
            var arrayTemp = [];
            var date = new Date();
            if (select == "week") {
                date.setDate(date.getDate()-7);
            }
            else if (select == "month") {
                date.setMonth(date.getMonth()-1);
            }
            else if (select == "year") {
                date.setFullYear(date.getFullYear()-1);
            }
            else {
                date.setFullYear(0);
            }
            {% for temp in tempString %}
                if (new Date('{{ temp.createdAt }}') > date) {
                    arrayDate.push('{{ temp.createdAt }}');
                    arrayTemp.push('{{ temp.celsius }}');
                }
            {% endfor %}
            genChart(arrayDate, arrayTemp);
        }

        function genChart(arrayDate, arrayTemp) {
            var ctx = document.getElementById("myChart");
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                labels: arrayDate,
                datasets: [{
                    data: arrayTemp,
                    lineTension: 0,
                    backgroundColor: 'transparent',
                    borderColor: '#007bff',
                    borderWidth: 4,
                    pointBackgroundColor: '#007bff'
                }]
                },
                options: {
                scales: {
                    yAxes: [{
                    ticks: {
                        beginAtZero: false
                    }
                    }]
                },
                legend: {
                    display: false,
                }
                }
            });
        }
    </script>
{% endblock %}
